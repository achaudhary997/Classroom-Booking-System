        <VBox layoutX="187.0" layoutY="48.0" prefHeight="281.0" prefWidth="226.0" spacing="10">
            <children>
            <RadioButton fx:id="register2AdminRadio" mnemonicParsing="false" prefHeight="31.0" prefWidth="75.0" text="Admin">
