            </children></VBox>
        <Button layoutX="493.0" layoutY="336.0" mnemonicParsing="false" onAction="#showNextBasedOnAccountType" text="Next" />
      <Button layoutX="428.0" layoutY="336.0" mnemonicParsing="false" onAction="#handleGoBack" text="Back" />
        <Button layoutX="289.0" layoutY="336.0" mnemonicParsing="false" onAction="#showLoginPage" prefHeight="31.0" prefWidth="123.0" text="Return to Login" />
    </children>

</AnchorPane>
