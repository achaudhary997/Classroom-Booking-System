                  <ToggleGroup fx:id="accountType" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="register2FacultyRadio" mnemonicParsing="false" prefHeight="31.0" prefWidth="75.0" text="Faculty" toggleGroup="$accountType" />
