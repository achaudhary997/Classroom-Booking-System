<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UIControllers.RegisterController">
    <children>
        <Separator layoutX="14.0" layoutY="25.0" prefHeight="3.0" prefWidth="571.0" />
